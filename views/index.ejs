<!DOCTYPE html>
<html lang="fr" dir="ltr">
    <head>
        <meta charset="utf-8">
        <title>Reasonnance</title>
        <link rel="stylesheet" href="assets/css/index.css">
    </head>  
    <body>
        <main>
            <div id="scene-container">
                <div id=scene-canvas-container>
                    <canvas width="400" height="400" id="scene-canvas"></canvas>
                    <button id="play-btn" type="button" name="button">Jouer le son</button>
                </div>
                <aside id="sounds-container">
                    <% sounds.forEach(sound => { %>
                        <div class="sound-item">
                            <%= sound %>
                        </div>
                    <% }); %>
                    
                    <div id="upload-container">
                        <div>
                            <a id="upload-controller" href="">ajouter une source audio</a>
                        </div>
                        <form class="hidden" id="upload-form" method="POST" enctype="multipart/form-data">
                            <input id="sounds-upload" name="sounds" type="file" multiple />
                            <button id="sounds-upload-btn" type="submit">upload</button>
                        </form>
                    </div>
                </aside>
            </div>
        </main>
        
        <script src="resonance/build/resonance-audio.min.js"></script>
        <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
        <script src="assets/js/index.js" type="module"></script>
    </body>
</html>
